{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/*"],
      "@teams/*": ["teams/*"]
    }
  },
  "include": ["src/**/*", "teams/**/*", "shared/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
